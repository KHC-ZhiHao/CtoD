{
  "compilerOptions": {
    "target": "esnext",
    "downlevelIteration": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "ESNext"
    ]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": [
    "lib/**/*.ts",
    "examples/**/*.ts"
  ]
}
